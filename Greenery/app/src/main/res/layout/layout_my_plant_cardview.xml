<?xml version="1.0" encoding="utf-8"?>
<!--내 식물 카드뷰 레이아웃-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myPlant_cardView"
    android:layout_width="152dp"
    android:layout_height="200dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/BrightGray"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/myPlant_ImageView"
            android:layout_width="136dp"
            android:layout_height="128dp"
            android:background="@drawable/shape_round"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/img_money_tree" />

        <TextView
            android:id="@+id/myPlant_nicknameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="식물 애칭"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myPlant_ImageView" />

        <TextView
            android:id="@+id/myPlant_speciesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="식물 종류"
            android:textColor="@color/DarkGray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myPlant_nicknameTextView" />

        <TextView
            android:id="@+id/myPlant_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="식물을 가져온 날짜"
            android:textColor="@color/DarkGray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>